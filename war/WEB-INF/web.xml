<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>GameCommunicationServiceServlet</servlet-name>
    <servlet-class>com.wicam.numberlineweb.server.GameCommunicationServiceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChatCommunicationServiceServlet</servlet-name>
    <servlet-class>com.wicam.numberlineweb.server.chat.ChatCommunicationServiceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NumberLineGameCommunicationServiceServlet</servlet-name>
    <servlet-class>com.wicam.numberlineweb.server.NumberLineGame.NumberLineGameCommunicationServiceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DoppelungGameCommunicationServiceServlet</servlet-name>
    <servlet-class>com.wicam.numberlineweb.server.VowelGame.DoppelungGame.DoppelungGameCommunicationServiceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FactsGameCommunicationServiceServlet</servlet-name>
    <servlet-class>com.wicam.numberlineweb.server.factsGame.FactsGameCommunicationServiceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MathDiagnosticsCommunicationServiceServlet</servlet-name>
    <servlet-class>com.wicam.numberlineweb.server.MathDiagnostics.MathDiagnosticsCommunicationServiceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DehnungGameCommunicationServiceServlet</servlet-name>
    <servlet-class>com.wicam.numberlineweb.server.VowelGame.DehnungGame.DehnungGameCommunicationServiceServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>GameCommunicationServiceServlet</servlet-name>
    <url-pattern>/numberlineweb/gameCommunication</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NumberLineGameCommunicationServiceServlet</servlet-name>
    <url-pattern>/numberlineweb/numberLineGameCommunication</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChatCommunicationServiceServlet</servlet-name>
    <url-pattern>/numberlineweb/chatCommunication</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DoppelungGameCommunicationServiceServlet</servlet-name>
    <url-pattern>/numberlineweb/doppelungGameCommunication</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FactsGameCommunicationServiceServlet</servlet-name>
    <url-pattern>/numberlineweb/factsGameCommunication</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MathDiagnosticsCommunicationServiceServlet</servlet-name>
    <url-pattern>/numberlineweb/mathDiagnosticsCommunication</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DehnungGameCommunicationServiceServlet</servlet-name>
    <url-pattern>/numberlineweb/dehnungGameCommunication</url-pattern>
  </servlet-mapping>
  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>NumberLineWeb.html</welcome-file>
  </welcome-file-list>

</web-app>
